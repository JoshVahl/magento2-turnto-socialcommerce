<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <!-- The purpose of this layout type is to provide a layout that will only output content added to the root
         container, rather than the header/footer/etc content that gets output by the empty layout and those that extend
         it. -->
    <container name="root" />
</layout>
