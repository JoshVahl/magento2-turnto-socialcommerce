<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="TurnTo\SocialCommerce\Logger\Monolog" type="Magento\Framework\Logger\Monolog" />
    <type name="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">turnto</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">TurnTo\SocialCommerce\Logger\Handler\FileHandler</item>
                <item name="debug" xsi:type="object">Magento\Framework\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </type>
</config>